<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

</head>

<body>
    <div class="post-head">
        <h1>Update Password</h1>
    </div>
    <div class="container">
        <div class="inner-container">
            <form action="#" method="post" id="my-form">
                <label for="oldpassword"><strong>Old Password</strong></label><br>
                <input type="password" name="oldpassword" class="input"><br><br>

                <label for="newpassword"><strong>New Password</strong></label><br>
                <input type="password" name="newpassword" class="input"><br><br>

                <label for="confirmPassword"><strong>Confirm Password</strong></label><br>
                <input type="password" name="confirmPassword" class="input"><br><br>

                <div class="btn-container"><br>
                    <input type="submit" value="Submit" class="btn">
                </div>
            </form>
        </div>
    </div>
    <script>
        $('form#my-form').submit(function (e) {
            e.preventDefault();
            const data = new FormData(this);
            $.ajax({
                url: '/user/update-password',
                type: 'PUT',
                data: data,
                success: (data) => {
                   alert('success');
                   window.location.href = data.route   
                },
                error: (response) => {
                    if(response.status == 400){
                        alert(`Error Code : ${response.status}\nError Message : ${response.responseJSON[0].message}`);
                    }
                    else{
                        console.log(response.responseJSON)
                        alert(`Error Code : ${response.status}\nError Message : ${response.responseJSON.message}`);
                    }
                },
                cache: false,
                contentType: false,
                processData: false,
            })
        });
    </script>
</body>

</html>